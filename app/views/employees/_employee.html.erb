<tr>
		<td><%= link_to employee.nombre, {controller: "employees", action: "balance", id: employee.id}, :class=>'btn btn-small',:style=>'padding:0px' %></td>
		<td><%= employee.email %></td>
		<td><%= employee.fecha_alta %></td>
		<td><%= employee.cargo %></td>
		<td><%= get_role(employee) %></td>
	

		
		<td>
			<% if admin_user? %>
				<%= link_to 'Editar', edit_employee_path(employee.id), :class => 'btn btn-sm btn-default' %>
			<% end %>
		</td>
		<td>
			<% if admin_user? && !current_user?(employee) %>
				<% if employee.status %>
					<%= link_to "Dar baja", employee, method: :delete, data: { confirm: "Esta seguro? Una vez que el empleado sea dado de baja, ya no podra realizar solicitudes" },
						:class => 'btn btn-sm btn-danger' %>
				<% else %>
					<%= link_to "Reactivar", employee, method: :delete, data: { confirm: "Esta seguro? Una vez que el empleado sea reactivado, ya podra realizar solicitudes" },
						:class => 'btn btn-sm btn-danger' %>
				<% end %>
			<% end %>
		</td>
</tr>
