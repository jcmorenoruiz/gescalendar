<h2 class="sub-header">Editar día no laborable</h2>
<%= render partial:'shared/error_messages',  object: @line_calendar, as: 'object' %>

<%= form_for(@line_calendar, :html => {:class => "form form-horizontal"}) do |f| %>

  <fieldset>  

  <div class="well">
    <legend>Datos</legend>

    <div class="field form-group"> 
      <%= f.label :fecha, "Fecha",:class =>'control-label col-sm-2' %>
      <div class="col-sm-6 col-md-4">
  	  <%= f.text_field :fecha, :class => 'datepicker form-control', :placeholder => "Click para abrir calendario", :required =>true %>
      </div>
    </div>

    <div class="field form-group">
      <%= f.label :dia, "Nombre del dia", :class =>'control-label col-sm-2' %><br>
      <div class="col-sm-6 col-md-4">
        <%= f.text_field :dia, :class =>'form-control', :required => true %>
      </div>
    </div>

    <div class="field form-group">
      <%= f.label :desc, "Descripción", :class =>'control-label col-sm-2' %><br>
      <div class="col-sm-8 col-md-6">
      <%= f.text_area :desc, size: "60x4", :class =>'form-control' %>
      </div>
    </div>

    <%= f.hidden_field :calendar_id, :value => @calendar.id %>
    

  </div>

    <div class="modal-footer">
      <%= f.submit "Guardar", class:"btn btn-medium btn-primary" %>
        <%= link_to("Cancelar", calendar_path(@calendar), :confirm => "Esta seguro de cancelar la operación?  Los cambios no se guardaran ", :class => "btn btn-default", :title => "Cancelar los cambios y volver a la pagina inicial.") %>
      </div>
  </fieldset>

<% end %>



