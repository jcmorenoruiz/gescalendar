<% provide(:title, @dpto.nombre) %>

<h3>Disponibilidad de <%= @dpto.nombre %></h3>

<div class="row">
  <div class="well well-small">
<%= link_to "Nueva Disponibilidad !", new_availability_path(id: @dpto.id), class: "btn btn-medium btn-primary" %> 
    <div class="alert alert-info">
    <strong>Haga Click</strong> para crear un nuevo perdiodo de disponibilidad mínima de empleados con un cargo concreto.
    </div>
</div>

<% if @dpto.availabilities.count>0 %>
  <table class="table table-hover table-striped">
  <thead>
    <tr class="fields">
      <th width="15%">Cargo</th>
      <th width="15%">Nª Empleados</th>
      <th width="7%">Desde</th>
      <th width="7%">Hasta</th>
      <th width="56%">Notas</th>
      <th>&nbsp;</th>
    </tr>
  </thead>

  <tbody>
    <% @dpto.availabilities.each do |av| %>
      <tr>
        <td><%= av.cargo %></td>
        <td><%= av.num_min_emp %></td>
        <td><%= av.desde %></td>
        <td><%= av.hasta %></td>
        <td><%= av.notas %></td>
        <td><%= link_to 'Editar', edit_availability_path(av), :class => 'btn btn-small btn-default' %></td>
        <td><%= link_to 'Eliminar', av, method: :delete, data: { confirm: 'Esta seguro?' }, :class => 'btn btn-small btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
  </table>
<% end %>


<br>
  <div class="modal-footer"> 
        <%= link_to("Volver", departments_path, :confirm => "Esta seguro de cancelar la operación?  Los cambios no se guardaran ", :class => "btn btn-primary", :title => "Cancelar los cambios y volver a la pagina inicial.") %>
  </div>

