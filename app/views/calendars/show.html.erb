<% provide(:title, 'Dias festivos del calendario') %>
<h3>Dias festivos del calendario <%= @cal.anio %> - <%= @cal.department.nombre %></h3>

<div class="row">
<div class="well well-small">
  <%= link_to "Nuevo Día no laborable !", new_line_calendar_path(calendar_id: @cal.id), class: "btn btn-medium btn-primary" %> 
</div>
  <table class="table table-hover table-striped">
  <thead>
    <tr class="fields">
      <th width="15%">Fecha</th>
      <th width="50%">Nombre</th>
      <th width="10%">Estado</th>
      <th width="7%">&nbsp;</th>
      <th width="7%">&nbsp; </th>
    </tr>
  </thead>

  <tbody>
    <% @cal.line_calendars.each do |line_calendar| %>
      <tr>
        <td><%= line_calendar.fecha %></td>
        <td><%= line_calendar.dia %></td>
        <td><%= bool_to_s(line_calendar.status) %></td>
        <td><%= link_to 'Editar', edit_line_calendar_path(line_calendar), :class => 'btn btn-default btn-small' %></td>
        <td><%= link_to 'Eliminar', line_calendar, method: :delete, data: { confirm: 'Esta seguro?' }, :class => 'btn btn-danger btn-small' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
  <div class="modal-footer">
    
        <%= link_to("Volver", calendars_path, :confirm => "Esta seguro de cancelar la operación?  Los cambios no se guardaran ", :class => "btn btn-primary", :title => "Cancelar los cambios y volver a la pagina inicial.") %>
  </div>

