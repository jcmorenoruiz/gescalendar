



<% if(params[:controller] == 'sessions' && %w(new).include?(params[:action]) ) %>

<% else %>
  <%= form_for(:session, url: sessions_path,:html => {:class =>'navbar-form navbar-right'}) do |f| %>
        
              <div class="form-group"> 
                <%= f.text_field :email, :placeholder=> 'Email', :class=>'form-control', :required=>true %>
              </div>
           
              <div class="form-group">
                <%= f.password_field :password, :placeholder=>'Password',:class=>'form-control', :required => true %>
              </div>
             
              <%= f.submit "Entrar", class:"btn btn-success" %>
              
  <% end %>

<% end %>
