<!-- Left side column. contains the logo and sidebar -->
<aside class="main-sidebar">

  <!-- sidebar: style can be found in sidebar.less -->
  <section class="sidebar">

    <!-- Sidebar user panel (optional) -->
    <div class="user-panel">
      <div class="pull-left image">
         <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
      </div>
      <div class="pull-left info">
        <p><%= current_user.nombre %></p>
        <!-- Status -->
        <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
      </div>
    </div>

    <!-- Sidebar Menu -->
    <ul class="sidebar-menu">
      <li class="header">MENU PRINCIPAL</li>
      <!-- Optionally, you can add icons to the links -->
      <li>
        <%= link_to "<i class='fa fa-link'></i><span>Mi Perfil</span>".html_safe, current_user %>
      </li>
      <li>
        <%= link_to "<i class='fa fa-edit'></i><span>Nueva solicitud</span>".html_safe, new_request_path(:id => current_user.id) %>
      </li>
      <li>
        <%= link_to "<i class='fa fa-calendar'></i><span>Calendario</span>".html_safe, requests_calendar_path %>
      </li>
      <li>
        <%= link_to "<i class='fa fa-table'></i><span>Mi Balance</span>".html_safe, {controller: "employees",action: "balance" , id: current_user.id} %>
      </li>
      <li class="header">GESTION DE EMPRESA</li>
      <!--<li><a href="#"><span>Another Link</span></a></li> -->
       <li><%= link_to ("<i class='fa fa-book'></i>Solicitudes <span class='badge'> #{ pending_requests } </span>").html_safe, requests_pending_path %></li>
   
      <li class="treeview">
        <a href="#"><span>Permisos laborales</span> <i class="fa fa-angle-left pull-right"></i></a>
        <ul class="treeview-menu">
          <li><%= link_to "<i class='fa fa-circle-o'></i>Nuevo permiso".html_safe, new_request_type_path %></li>
          <li><%= link_to "<i class='fa fa-circle-o'></i>Listar permisos".html_safe, request_types_path %></li>
        </ul>
      </li>

      <li class="treeview">
        <a href="#"><span>Calendarios</span> <i class="fa fa-angle-left pull-right"></i></a>
        <ul class="treeview-menu">
          <li><%= link_to "<i class='fa fa-circle-o'></i>Nuevo permiso".html_safe, new_request_type_path %></li>
          <li><%= link_to "<i class='fa fa-circle-o'></i>Listar permisos".html_safe, request_types_path %></li>
        </ul>
      </li>
    </ul><!-- /.sidebar-menu -->
  </section>
  <!-- /.sidebar -->
</aside>
