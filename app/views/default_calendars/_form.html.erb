
<%= form_for(@default_calendar) do |f| %>
 <fieldset class="scheduler-border">
 <div class="well">
    <legend class="scheduler-border" >Datos del calendario</legend>
    <div class="form-group">
      <%= f.label :anio, "AÃ±o del calendario", :class=>'control-label col-sm-2 col-md-3 col-xs-3' %>
      <div class="col-sm-3 col-md-3 col-xs-6">
        <%= f.number_field :anio , :class=>'form-control' %>
      </div>
    </div>
  <br><br>
  <div class="form-group">
    <div class="checkbox col-sm-3">
      <label>
