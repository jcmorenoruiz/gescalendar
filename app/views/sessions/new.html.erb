
<style>	body{	background-color: #eee;	} </style>

<% provide(:title, "Autentificarse") %>
<div class="container">

<% flash.each do |name, msg| -%>
              <%= content_tag :div, msg, class: "alert alert-#{name}" %>
<% end -%>
	
	
<%= form_for(:session, url: sessions_path, :html => {:class=>'form-signin'}) do |f| %>
		
		 	<h2 class="form-signin-heading">Autentifíquese</h2>
			<%= f.label "Email",:email, :class=>'sr-only' %>
			<%= f.email_field :email, :class=>'form-control', :placeholder=>"Email", :required => true %>

			<%= f.label "Password",:password,:class=>'sr-only' %>

			<%= f.password_field :password,:class=>'form-control', :placeholder=>"Password", :required => true %>
			
			<%= f.submit "Aceptar", class:"btn btn-lg btn-primary btn-block" %>
			<br>
			<p> 
				No esta registrado? <%= link_to "Registrese ahora!", signup_path %> <br>
					 <%= link_to "(He olvidado mi contraseña)", new_password_reset_path %>
			</p>
<% end %>
		
</div>
	

