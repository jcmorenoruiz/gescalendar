<h2 class="sub-header">Datos de la Empresa</h2>

<div class="row">
	
	<%= form_for(@emp,html: {class: "form-horizontal"}) do |f| %>
		<div class="well">
			<div class="form-group">	
				<%= f.label :empresa, :class =>'control-label col-sm-2' %>
				<div class="col-sm-6 col-md-4">
					<%= f.text_field :empresa, :class =>'form-control' %>
				</div>
			</div>
		</div>

		<div class="modal-footer">
		    <%= f.submit "Guardar", class:"btn btn-medium btn-primary" %>    
		</div>
	<% end %>
	
</div>